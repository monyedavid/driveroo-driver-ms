{
    "name": "@driveroo/driverapp",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeScript & GraphQL",
    "devDependencies": {
        "@gql2ts/types": "^1.9.0",
        "@types/connect-redis": "^0.0.10",
        "@types/express-rate-limit": "^3.3.1",
        "@types/express-session": "^1.15.13",
        "@types/glob": "^7.1.1",
        "@types/helmet": "^0.0.43",
        "@types/ioredis": "^4.0.13",
        "@types/jest": "^24.0.15",
        "@types/mongoose": "^5.5.9",
        "@types/morgan": "^1.7.36",
        "@types/node": "^12.0.10",
        "@types/request": "^2.48.1",
        "@types/request-promise": "^4.1.44",
        "gql2ts": "^1.10.1",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0"
    },
    "dependencies": {
        "@gql2ts/from-schema": "^1.10.1",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "clean-deep": "^3.0.2",
        "connect-redis": "^3.4.2",
        "copyfiles": "^2.1.1",
        "dotenv": "^8.0.0",
        "express-rate-limit": "^5.0.0",
        "express-session": "^1.16.2",
        "glob": "^7.1.4",
        "graphql-import": "^0.7.1",
        "graphql-request": "^1.8.2",
        "graphql-tools": "^4.0.5",
        "graphql-yoga": "^1.18.0",
        "helmet": "^3.19.0",
        "ioredis": "^4.11.2",
        "merge-graphql-schemas": "^1.5.8",
        "mongoose": "^5.6.6",
        "morgan": "^1.9.1",
        "rate-limit-redis": "^1.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^2.6.3",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "typescript": "^3.5.2"
    },
    "scripts": {
        "start": "ts-node --files build/src/index.ts",
        "start:dev": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
        "test": "NODE_ENV=test jest --watch --detectOpenHandles --no-cache",
        "gen-schema-types": "ts-node src/scripts/createTypes.ts",
        "build:server": "rimraf ./build && tsc && copyfiles -u 1 src/**/*.graphql build",
        "mailer": "ts-node src/mail/index.ts"
    },
    "jest": {
        "globalSetup": "<rootDir>/src/test-utils/callSetUp.js",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
